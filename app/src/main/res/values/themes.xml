<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RepoQuickLook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_21</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_42</item>
        <item name="colorSecondaryVariant">@color/black_21</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    
    <style name="BottomSlidingUpDialogAnimation" parent="Theme.RepoQuickLook">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_down</item>
    </style>
</resources>